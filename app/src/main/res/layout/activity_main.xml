<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:text="Thông tin cá nhân"
        android:textColor="#FFEB3B"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="Họ tên: "
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_hoten"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Không được để trống"
            android:inputType="textPersonName"
            android:textSize="24sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="CMND:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editText_cmnd"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Không được để trống"
            android:inputType="number"
            android:maxLength="9"
            android:textSize="24sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="Bằng cấp"
        android:textColor="#FFEB3B"
        android:textSize="24sp" />
    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_gr">

            <RadioButton
                android:id="@+id/radio_tc"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:text="Trung cấp"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radio_cd"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:text="Cao đẳng"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/radio_dh"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:text="Đại học"
                android:textSize="18sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="Sở thích"
        android:textColor="#FFEB3B"
        android:textSize="24sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkBox_db"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:text="Đọc báo"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBox_ds"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:text="Đọc sách"
        android:checked="true"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBox_dc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đọc coding"
        android:textSize="18sp" />
</LinearLayout>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="Thông tin bổ sung"
        android:textColor="#FFEB3B"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editText_bosung"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_gui"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Gửi thông tin"
        android:textSize="18sp" />

</LinearLayout>